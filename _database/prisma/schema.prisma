generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id           String @id @default(uuid())
  company_name String @map("companyName")
  cnpj         String
  description  String

  User User[]

  @@map("companies")
}

model User {
  name       String  @id
  email      String
  password   String
  cpf        String
  phone      String
  company_id String  @map("companyId")
  company    Company @relation(fields: [company_id], references: [id])

  @@map("users")
}
